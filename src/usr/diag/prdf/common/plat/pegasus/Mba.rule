    UNIT_CS:     summary( 0, MbaFir )       |
                 summary( 1, MbaSecureFir ) |
                 summary( 2, MbaDdrPhyFir ) |
                 summary( 3, MbaCalFir );

    RECOVERABLE: summary( 0, MbaFir )       |
                 summary( 1, MbaSecureFir ) |
                 summary( 2, MbaDdrPhyFir ) |
                 summary( 3, MbaCalFir );
};

